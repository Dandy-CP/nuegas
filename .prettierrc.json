{
	"trailingComma": "es5",
	"semi": true,
	"singleQuote": true,
	"jsxSingleQuote": true,
	"bracketSpacing": true,
	"arrowParens": "always",
	"useTabs": true,
	"tabWidth": 2,
	"plugins": [
		"@trivago/prettier-plugin-sort-imports",
		"prettier-plugin-tailwindcss"
	],
	"importOrder": [
		"<THIRD_PARTY_MODULES>",
		"^@mui/(.*)$",
		"^@hookform/(.*)$",
		"^@/components/(.*)$",
		"^@/hooks",
		"^@/config",
		"^@/service/(.*)$",
		"^@/context",
		"^@/types",
		"^@/schema",
		"^@/public/(.*)$",
		"^@/styles/(.*)$",
		"^[./]"
	]
}
